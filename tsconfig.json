{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": ["src/**/*", "test/**/*", "typings/**/*"],
  "exclude": ["node_modules"]
}
