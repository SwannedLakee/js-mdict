{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,

    "module": "node16",
    "target": "es2022",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noUnusedLocals": true,

    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["DOM", "ES2022"],
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src/*.ts"]
}
